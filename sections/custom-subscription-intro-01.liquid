.container-perks {
    display: flex;
    flex-direction: row; /* Ensures side-by-side layout */
    height: calc(100vh - 20vh - 40px);
    width: 100%; /* Full viewport width */
    justify-content: stretch; /* Ensures that each child expands as needed */
    align-items: stretch; /* Aligns children to stretch to fill the container height */
    background-color:black;

}
.text-list-perks {
    height:100%;
    width: 50%; /* Half of the container */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Vertically center content in this column */
    align-items: flex-start; /* Align items to the start (left side) of the column */
    border-right: 20px solid var(--padding-sections); /* Adds a border between the columns */
    box-sizing: border-box; /* Includes padding and border in the element's width */

}
.icon-display-perks {
    width: 50%; /* Half of the container */
    display: flex;
    align-items: center; /* Centers content vertically */
    justify-content: center; /* Centers content horizontally */
    font-size: 48px;
    visibility: visible; /* Always visible */
    box-sizing: border-box; /* Includes padding and border in the element's width */
    padding: 20px; /* Optional padding for aesthetics */

}
.text-item-perks{
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: black;
