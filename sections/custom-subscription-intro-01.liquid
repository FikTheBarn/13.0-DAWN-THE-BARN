  document.addEventListener('DOMContentLoaded', function() {

      // Function to strip HTML tags from strings
      function stripHtml(html) {
          var tempDiv = document.createElement("div");
          tempDiv.innerHTML = html;
          return tempDiv.textContent || tempDiv.innerText || "";
      }

      // Image hover functionality
    const containers = document.querySelectorAll('.text-content-container-past_image');
      
      containers.forEach(container => {
          const defaultImage = container.querySelector('.default-image');
          const hoverImage = container.querySelector('.hover-image');

          if (!defaultImage || !hoverImage) {
              console.error('One or both images not found in a container');
              return;
          }

          container.addEventListener('mouseenter', function() {
              defaultImage.style.opacity = 0;
              hoverImage.style.opacity = 1;
          });

          container.addEventListener('mouseleave', function() {
              defaultImage.style.opacity = 1;
              hoverImage.style.opacity = 0;
          });
      });

      // Accordion functionality
      var accButtons = document.querySelectorAll('.accordion-button');
      accButtons.forEach(function(btn) {
          btn.addEventListener('click', function() {
              var panel = this.nextElementSibling;
              var arrow = this.querySelector('.arrow');
              if (panel.style.maxHeight) {
                  panel.style.maxHeight = null;
                  arrow.innerHTML = '&#9660;';
              } else {
                  document.querySelectorAll('.panel').forEach(p => p.style.maxHeight = null);
                  document.querySelectorAll('.accordion-button .arrow').forEach(a => a.innerHTML = '&#9660;');
                  panel.style.maxHeight = panel.scrollHeight + "px";
                  arrow.innerHTML = '&#9650;';
              }
          });
      });

      

  });
