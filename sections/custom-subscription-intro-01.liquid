:root {
  --brown: #804d15;
  --white: #ffffff;
  --black:#282828;
  --padding-sections:#191919;
  --golden-star:#ffe234;
  --text-shadow:#bcbcbc;
  --button-main:black;
  --font-main: "Chalet Comprime";
  --font-secondary:"Raleway";
  --font-size-big-biggie:8vh;
  --font-size-big:6vh;
  --font-size-medium:4vh;
  --font-size-medium-small:3.5vh;
  --font-size-small:14px;
}



.button-link  {
  text-decoration: none; /* Removes underline from links */
  color: inherit; /* Ensures text color inherits from parent elements */
}
.button-main a  {
  text-decoration: none; /* Removes underline from links */
  color: white;

}
.button-main p  {

  margin:0px;
  padding:0px;
}

.button-main {
  background-color: var(--brown);
  padding: 1.6rem;
  border-radius: 5px;
  color: var(--white);
  min-width: 20rem; 
  font-size: 16px;
  border: 2px solid black;
  transition: box-shadow 0.3s ease-in-out; /* Smooth transition for the shadow */
  cursor: pointer; /* Ensures the cursor changes to a pointer when hovered */
}

.button-main:hover {
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.9);
  transform: scale(1.05); /* Slightly enlarges the button */
}


