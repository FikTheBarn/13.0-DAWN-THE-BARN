  document.addEventListener('DOMContentLoaded', function() {
      // Function to strip HTML tags from strings
      function stripHtml(html) {
          var tempDiv = document.createElement("div");
          tempDiv.innerHTML = html;
          return tempDiv.textContent || tempDiv.innerText || "";
      }

      // Image hover functionality
    const containers = document.querySelectorAll('.text-content-container-past_image');
      
      containers.forEach(container => {
          const defaultImage = container.querySelector('.default-image');
          const hoverImage = container.querySelector('.hover-image');

          if (!defaultImage || !hoverImage) {
              console.error('One or both images not found in a container');
              return;
          }

          container.addEventListener('mouseenter', function() {
              defaultImage.style.opacity = 0;
              hoverImage.style.opacity = 1;
          });

          container.addEventListener('mouseleave', function() {
              defaultImage.style.opacity = 1;
              hoverImage.style.opacity = 0;
          });
      });

      // Accordion functionality
      var accButtons = document.querySelectorAll('.accordion-button');
      accButtons.forEach(function(btn) {
          btn.addEventListener('click', function() {
              var panel = this.nextElementSibling;
              var arrow = this.querySelector('.arrow');
              if (panel.style.maxHeight) {
                  panel.style.maxHeight = null;
                  arrow.innerHTML = '&#9660;';
              } else {
                  document.querySelectorAll('.panel').forEach(p => p.style.maxHeight = null);
                  document.querySelectorAll('.accordion-button .arrow').forEach(a => a.innerHTML = '&#9660;');
                  panel.style.maxHeight = panel.scrollHeight + "px";
                  arrow.innerHTML = '&#9650;';
              }
          });
      });

      // Icon and text update functionality
      const items = document.querySelectorAll('.text-item-perks');
      const iconDisplay = document.querySelector('.icon-display-perks');
      let lastHoveredItem = null;

      function setIconAndText(item) {
          iconDisplay.innerHTML = '';

          const icon = document.createElement('lord-icon');
          icon.setAttribute('src', item.getAttribute('data-icon-perks'));
          icon.setAttribute('trigger', 'loop');
          icon.setAttribute('colors', 'primary:#FFFFFF,secondary:#FFFFFF');
          icon.setAttribute('style', 'width:250px;height:250px');
          icon.setAttribute('delay', '2000');

          const text = document.createElement('div');
          text.textContent = stripHtml(item.getAttribute('data-text-perks'));
          text.style.color = '#fff';
          text.style.fontSize = '20px';
          text.style.textAlign = 'center';
          text.style.marginTop = '20px';

          iconDisplay.appendChild(icon);
          iconDisplay.appendChild(text);
          iconDisplay.style.visibility = 'visible';
          
          lastHoveredItem = item;
      }

      if (items.length > 0) {
          setIconAndText(items[0]);
          lastHoveredItem = items[0];
      }

      items.forEach(item => {
          item.addEventListener('mouseenter', function() {
              setIconAndText(this);
          });
          item.addEventListener('mouseleave', function() {
              if (lastHoveredItem) {
                  setIconAndText(lastHoveredItem);
              }
          });
      });

  });
