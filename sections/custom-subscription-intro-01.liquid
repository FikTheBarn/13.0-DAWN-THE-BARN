
{%- style -%}
:root {
  --brown: #804d15;
  --white: #ffffff;
  --black:#282828;
  --padding-sections:#191919;
  --golden-star:#ffe234;
  --text-shadow:#bcbcbc;
  --button-main:black;
  --font-main: "Chalet Comprime";
  --font-secondary:"Raleway";
  --font-size-big-biggie:8vh;
  --font-size-big:6vh;
  --font-size-medium:4vh;
  --font-size-medium-small:3.5vh;
  --font-size-small:14px;
}



.button-link  {
  text-decoration: none; /* Removes underline from links */
  color: inherit; /* Ensures text color inherits from parent elements */
}
.button-main a  {
  text-decoration: none; /* Removes underline from links */
  color: white;

}
.button-main p  {

  margin:0px;
  padding:0px;
}

.button-main {
  background-color: var(--brown);
  padding: 1.6rem;
  border-radius: 5px;
  color: var(--white);
  min-width: 20rem; 
  font-size: 16px;
  border: 2px solid black;
  transition: box-shadow 0.3s ease-in-out; /* Smooth transition for the shadow */
  cursor: pointer; /* Ensures the cursor changes to a pointer when hovered */
}

.button-main:hover {
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.9);
  transform: scale(1.05); /* Slightly enlarges the button */
}


{% comment %} ///////////////////HERO SECTION///////////////////// {% endcomment %}
.master-section-container-hero {
  position: relative; 
  height: calc(100vh - 168.688px);  
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  text-align: center;
  justify-content: center; 
  overflow: hidden; 
}
.content-overlay p{

  font-weight:bold;
}
.content-overlay {
  position: absolute;
  top: 0; 
  left: 0; 
  width: 100%; 
  height: 100%; 
  z-index: 2; 
  display: flex; 
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px; 
}
.background-video {
  position: absolute; 
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; 
  z-index: 1; 
}
.button-hero{
  margin-top:2rem;
}

{% comment %} ///////////////////SECOND SECTION///////////////////// {% endcomment %}
.master-section-container{
  height:100vh;
  border:20px solid var(--padding-sections);
}
.master-title-subtitle-button-container{
  height:20vh;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  padding:20px;

}
.master-title-subtitle-container{
  width:50%;
}
.master-content-container{


  overflow-x: auto;
  -webkit-overflow-scrolling: touch; /* Enables momentum-based scrolling on iOS devices */
  scroll-snap-type: x mandatory; 


  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;

  background-color:var(--padding-sections);
  width:100%;
  height: calc(100vh - 20vh - 40px );
}
.content-box-triple{
  max-width:33.33%;
  min-width:400px;
  border:2px solid var(--padding-sections);

  padding:0px;


  display:flex;
  flex-direction:column;
  justify-content:space-between;
  text-align:center;
  align-items:center;
  scroll-snap-align: start; 
}
.master-image{
  width:100%;
  height:60%;
  object-fit:cover;
}
.text-content-container{
  background-color:black;
  padding:20px;

  display:flex;
  flex-direction:column;
  justify-content:start;
  text-align:center;
  align-items:center;
}
.text-content-container h3{
font-size:var(--font-size-medium);
padding:0px;
margin:0px;
}
.arrow-right-container{
  background-color:black;
  width:100%;

  display:flex;
  flex-direction:row;
  justify-content:flex-end;
  align-items:center;

  padding-right:1rem; 
  padding-bottom:1rem;


  
}


